@using OzelDers.Web.Models.Dtos
@model UserDto

<div class="card mb-2">
    <div class="card-body">
        <div>
            <img src="~/images/@Model.ImageUrl" width="100" height="100" />
        </div>
        <h5 class="display-6 card-title text-center">@Model.FirstName</h5>
        <div class="display-6 card-title text-center">@Model.LastName</div>
        <div class="text-success text-center">@Model.Age</div>
        <div class="text-success text-center">@Model.About</div>
    </div>
</div>