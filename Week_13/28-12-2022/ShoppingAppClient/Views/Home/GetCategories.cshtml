@model List<CategoryViewModel>

<h1 class="display-6">Kategori Listesi</h1>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>

                <td>@category.Name</td>
                <td>@category.Description</td>

              
            </tr>
        }
    </tbody>
</table>