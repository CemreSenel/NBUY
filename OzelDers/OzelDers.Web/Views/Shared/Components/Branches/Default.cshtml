@using OzelDers.Entity.Concrete
@model List<Branch>
<div class="list-group">
    <a 
        class="list-group-item list-group-item-action @(ViewBag.SelectedBranch==null ? "active" : "")"
       asp-controller="Branch"
       asp-action="BranchList"
       asp-route-branchurl="">Tümünü Göster</a>
    @foreach (var branch in Model)
    {
       <a class="list-group-item bg-dark text-warning list-group-item-action @(ViewBag.SelectedBranch==branch.Url ? "active" : "")"
       asp-controller="Branch"
       asp-action="BranchList"
       asp-route-branchurl=@branch.Url>@branch.Name</a>
    }
</div>