@using OzelDers.Web.Models.Dtos
@model RegisterDto

<body style="background-image:url(https://lh4.googleusercontent.com/Tz7UMpQNa-fnZsPdYwBxpGOY1tBrbHLzwsxH9Pdpog3jyF7QOJ3LrlQhGLcOpvSUlMq1ra8jLvn9SNkpFys5DepMkCSbw5LLx36zAMTr87GHm0oqzF4ZVmdbFu3sAMaf2Oc59njK);background-repeat:no-repeat;background-position:center;background-size:contain ">
    <h1 class="text-center">KAYIT OL</h1>
    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="row ">
            <div class="col-4"></div>
            <div class="col-4">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Üyelik Tipi Seçiniz:</label>
                    <select class="form-select" name="membershipType">
                        <option value="teacher">Öğretmen</option>
                        <option value="student">Öğrenci</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input class="form-control"  asp-for="FirstName">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <input class="form-control" asp-for="LastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label"></label>
                    <input class="form-control" asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input class="form-control" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="RePassword" class="form-label"></label>
                    <input class="form-control" asp-for="RePassword">
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-dark">Kayıt Ol</button>
                <a type="button" class="btn btn-warning"
                   asp-controller="Home"
                   asp-action="Index">Vazgeç</a>
            </div>
            <div class="col-4"></div>

        </div>
    </form>
</body>

