@model List<TeacherListDto>
<h1 class="text-center display-4">Ögretmenler</h1>
<hr />
<div class="text-center">

    <a type="button" asp-area="Admin" asp-controller="Teacher" asp-action="Create"
       class="btn btn-outline-dark"> ÖĞRETMEN EKLE</a>

</div>
<hr />
<table class="table table-responsive table-bordered ">
    <thead>
        <tr class="bg-warning">
            <th>Id</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Saatlik Ücret</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th style="width:130px">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Id</td>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@teacher.PricePerHour</td>
                <td>@teacher.UserName</td>
                <td>@teacher.Email</td>
                <td>
                    <a type="button" asp-area="Admin" asp-controller="Teacher" asp-action="Edit" asp-route-id=@teacher.Id class="btn btn-dark btn-sm ">Düzenle</a>
                    <a type="button" asp-area="Admin" asp-controller="Teacher" asp-action="Delete" asp-route-id=@teacher.Id class="btn btn-dark btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
