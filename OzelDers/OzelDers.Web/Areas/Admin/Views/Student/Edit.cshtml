@model StudentUpdateDto

<h1 class="text-center">Öğrenci Bilgileri Güncelleniyor</h1>
<hr />
<form asp-area="Admin" asp-controller="Student" asp-action="Edit" method="post">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-3">
            <div>
                <label asp-for="FirstName" class="form-label"></label>
                <input class="form-control" asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="LastName" class="form-label"></label>
                <input class="form-control" asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="UserName" class="form-label"></label>
                <input class="form-control" asp-for="UserName" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Email" class="form-label"></label>
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning mt-3">Kaydet</button>
        </div>
        <div class="col-3"></div>
    </div>
</form>
